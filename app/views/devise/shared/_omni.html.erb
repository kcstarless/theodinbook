<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <% if provider == :google_oauth2 %>
      <%= button_to "Sign in with Google", 
        omniauth_authorize_path(resource_name, provider), 
        data: { turbo: false }, method: :post, 
        class: 'btn btn--secondary' %>
    <% else %>
        <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, method: :post,  class: 'btn btn--secondary' %><br />
    <% end %>
  <% end %>
<% end %>
