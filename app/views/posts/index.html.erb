<main class="container">
    <div class="header">
        <% if params[:user_posts] == 'true' %>
            <h1><%= image_tag("odin_posts3.png", class: "image image--icon-header") %>My Posts</h1>
        <% else %>
            <h1><%= image_tag("odin_posts3.png", class: "image image--icon-header") %>Posts</h1>
        <% end %>
        <p><%= image_tag("spear_up.png", class: "image image--icon-header") %>recent || oldest <%= image_tag("spear_down.png", class: "image image--icon-header") %></p>
        <%= link_to "New post", new_post_path, class: "btn btn--secondary" %>
    </div>

    <%= render @posts %>
</main>