<div class="post">
    
    <div class="post__f1"><%= image_tag("odin_post_list.png", class: "image image--icon-header") %><%= link_to post.title, post_path(post) %></div>
    <div class="post__f1"><%= link_to post.user.username %></div>
    <div class="post__f1"><%= image_tag("odin_likes3.png", class: "image image--icon-list") %>  50</div>
    <div class="post__actions">

        <% if false %>
            <% if current_user.id == post.user.id %>
                <%= link_to "Delete",
                                post_path(post),
                                method: :delete,
                                class: "btn" %>
                <%= link_to "Edit",
                                edit_post_path(post),
                                class: "btn" %>
            <% end %>
        <% end %>

    </div>
</div>