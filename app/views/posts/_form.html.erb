<div class="form">
<%= simple_form_for post do |f| %>
  <%= f.input :title, input_html: { autofocus: true, class: 'title' } %>
  <%= f.input :body, input_html: { class: 'body' } %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.submit class: "btn btn--secondary" %>
<% end %>
</div>

